---
layout: default
---

<!-- Hero Section -->
<section id="hero" style="background-image: url('{{ site.data.home.hero.background_image | relative_url }}'); background-size: cover; background-position: center; min-height: 60vh; display: flex; align-items: center; justify-content: center;">
  <div class="overlay"></div>
  <div class="content text-center">
    <h1 class="display-4">{{ site.data.home.hero.title }}</h1>
  </div>
</section>

<!-- Research Areas Section -->
<section id="research-areas" class="container">
  <div class="text-center mb-5">
    <h2>{{ site.data.home.research_areas.title }}</h2>
    <p class="section-description">
      {{ site.data.home.research_areas.description }}
    </p>
  </div>
  
  <div class="row">
    {% for item in site.data.home.research_areas.items %}
    <div class="col-md-4 d-flex">
      <div class="card-item">
        <div class="img-container">
           <img src="{{ item.image }}" alt="{{ item.title }}">
        </div>
        <div class="card-content">
            <h5>{{ item.title }}</h5>
            <p>{{ item.description }}</p>
        </div>
      </div>
    </div>
    {% endfor %}
  </div>
</section>

<!-- Application Domains Section -->
<section id="application-domains" class="container-fluid">
  <div class="container">
    <div class="text-center mb-5">
      <h2>{{ site.data.home.application_domains.title }}</h2>
      <p class="section-description">
        {{ site.data.home.application_domains.description }}
      </p>
    </div>
    
    <div class="row">
      {% for item in site.data.home.application_domains.items %}
      <div class="col-md-4 d-flex">
        <div class="card-item">
          <div class="img-container">
             <img src="{{ item.image }}" alt="{{ item.title }}">
          </div>
          <div class="card-content">
            <h5>{{ item.title }}</h5>
            <p>{{ item.description }}</p>
          </div>
        </div>
      </div>
      {% endfor %}
    </div>
  </div>
</section>


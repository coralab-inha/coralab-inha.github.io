---
layout: default
---

<div class="container project-detail-page">
  
  <!-- Header Section -->
  <div class="project-header text-center mb-5">
    <h1 class="project-title font-weight-bold">{{ page.title }}</h1>
    {% if page.description %}
    <p class="project-description text-muted lead">{{ page.description }}</p>
    {% endif %}
  </div>

  <!-- Hero Image Section -->
  {% if page.img %}
  <div class="row justify-content-center mb-5">
    <div class="col-lg-10">
      <div class="project-hero-image shadow-sm rounded overflow-hidden">
        <img src="{{ page.img | relative_url }}" alt="{{ page.title }}" class="img-fluid w-100" style="object-fit: cover; max-height: 600px;">
      </div>
    </div>
  </div>
  {% endif %}

  <!-- content -->
  <div class="row justify-content-center">
    <div class="col-lg-10">
      <article class="post-content">
        {{ content }}
      </article>

      <!-- Project Gallery -->
      {% if page.images %}
      <div class="project-gallery mt-5 mb-4">
        <div class="row">
          {% for img in page.images %}
          <div class="col-md-6 mb-3">
            <figure class="figure w-100">
                <img src="{{ img.path | relative_url }}" class="figure-img img-fluid rounded shadow-sm w-100" alt="{{ img.title }}" style="object-fit: cover; height: 300px;">
                {% if img.title %}
                <figcaption class="figure-caption text-center">{{ img.title }}</figcaption>
                {% endif %}
            </figure>
          </div>
          {% endfor %}
        </div>
        {% if page.image_caption %}
        <div class="text-center text-muted small mt-2">
            {{ page.image_caption }}
        </div>
        {% endif %}
      </div>
      {% endif %}

      <!-- Project Meta Info -->
      {% if page.funding or page.keywords %}
      <div class="project-meta mt-5 pt-4 border-top">
        {% if page.funding %}
        <p class="mb-2"><strong>Funding:</strong> {{ page.funding }}</p>
        {% endif %}
        {% if page.keywords %}
        <p class="mb-0"><strong>Keywords:</strong> {{ page.keywords }}</p>
        {% endif %}
      </div>
      {% endif %}

    </div>
  </div>

  <!-- Related Publications -->
  {% if page.related_publications %}
    {% assign related_pubs = site.publications | where: "project", page.title %} <!-- or however relation is defined, usually it's automatic via bibliography if using jekyll-scholar, but here we preserve existing logic structure if any -->
    
    <!-- If existing logic uses bibliography tag -->
    <div class="row justify-content-center mt-5">
      <div class="col-lg-10">
        <h2>References</h2>
        <div class="publications">
          {% bibliography --cited_in_order %}
        </div>
      </div>
    </div>
  {% endif %}

  {% if site.giscus and page.giscus_comments %}
    <div class="row justify-content-center mt-5">
      <div class="col-lg-10">
        {% include giscus.liquid %}
      </div>
    </div>
  {% endif %}
</div>

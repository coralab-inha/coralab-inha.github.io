---
layout: default
---

<div class="container project-detail-page">
  
  {% assign p_data = site.data.projects.items | where: "key", page.key | first %}
  {% assign p_title = p_data.title | default: page.title %}
  {% assign p_desc = p_data.description | default: page.description %}
  {% assign p_img = p_data.img | default: page.img %}
  {% assign p_images = p_data.images | default: page.images %}
  {% assign p_caption = p_data.image_caption | default: page.image_caption %}
  {% assign p_funding = p_data.funding | default: page.funding %}
  {% assign p_keywords = p_data.keywords | default: page.keywords %}
  {% assign p_content = p_data.content | markdownify | default: content %}

  <!-- Header Section -->
  <div class="project-header text-center mb-5">
    <h1 class="project-title font-weight-bold">{{ p_title }}</h1>
    {% if p_desc %}
    <p class="project-description text-muted lead">{{ p_desc }}</p>
    {% endif %}
  </div>

  <!-- Hero Image Section -->
  {% if p_img %}
  <div class="row justify-content-center mb-5">
    <div class="col-lg-10">
      <div class="project-hero-image shadow-sm rounded overflow-hidden">
        <img src="{{ p_img | relative_url }}" alt="{{ p_title }}" class="img-fluid w-100" style="object-fit: cover; max-height: 600px;">
      </div>
    </div>
  </div>
  {% endif %}

  <!-- content -->
  <div class="row justify-content-center">
    <div class="col-lg-10">
      <article class="post-content">
        {{ p_content }}
      </article>

      <!-- Project Gallery -->
      {% if p_images %}
      <div class="project-gallery mt-5 mb-4">
        <div class="row">
          {% for img in p_images %}
          <div class="col-md-6 mb-3">
            <figure class="figure w-100">
                <img src="{{ img.path | relative_url }}" class="figure-img img-fluid rounded shadow-sm w-100" alt="{{ img.title }}" style="object-fit: cover; height: 300px;">
                {% if img.title %}
                <figcaption class="figure-caption text-center">{{ img.title }}</figcaption>
                {% endif %}
            </figure>
          </div>
          {% endfor %}
        </div>
        {% if p_caption %}
        <div class="text-center text-muted small mt-2">
            {{ p_caption }}
        </div>
        {% endif %}
      </div>
      {% endif %}

      <!-- Project Meta Info -->
      {% if p_funding or p_keywords %}
      <div class="project-meta mt-5 pt-4 border-top">
        {% if p_funding %}
        <p class="mb-2"><strong>Funding:</strong> {{ p_funding }}</p>
        {% endif %}
        {% if p_keywords %}
        <p class="mb-0"><strong>Keywords:</strong> {{ p_keywords }}</p>
        {% endif %}
      </div>
      {% endif %}

    </div>
  </div>

  {% if site.giscus and page.giscus_comments %}
    <div class="row justify-content-center mt-5">
      <div class="col-lg-10">
        {% include giscus.liquid %}
      </div>
    </div>
  {% endif %}
</div>

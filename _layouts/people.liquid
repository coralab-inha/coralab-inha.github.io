---
layout: default
---

<div class="container people-container people-page">
  {% if site.data.people.metadata.title %}
  <div class="people-header">
    <h1>{{ site.data.people.metadata.title }}</h1>
    {% if site.data.people.metadata.description %}
    <p>{{ site.data.people.metadata.description }}</p>
    {% endif %}
  </div>
  {% endif %}

  <!-- Data-Driven Category Loop -->
  {% for category_item in site.data.people.categories %}
    {% assign category_key = category_item.key %}
    {% assign category_title = category_item.title %}
    
    {% assign people_in_category = site.people | where: "category", category_key %}
    
    {% if people_in_category.size > 0 %}
    <div class="row mb-5 justify-content-center">
      <div class="col-12 mb-3">
        <h3 class="category-title border-bottom pb-2">{{ category_title }}</h3>
      </div>
      
      {% if category_key == 'alumni' %}
        <div class="col-12">
          <ul class="alumni-list" style="list-style: none; padding-left: 0;">
            {% for person in people_in_category %}
            <li style="margin-bottom: 0.5rem; font-size: 1.1rem;">
              <span style="font-weight: bold; color: var(--global-theme-color);">{{ person.title }}</span>
            </li>
            {% endfor %}
          </ul>
        </div>
      {% else %}
        {% for person in people_in_category %}
        <div class="col-md-4 mb-4">
          {% if person.url %}
          <a href="{{ person.url | relative_url }}" class="profile-card text-decoration-none text-reset">
          {% else %}
          <div class="profile-card">
          {% endif %}
          
            <div class="profile-img-container mb-3">
               <img src="{{ person.image | default: '/assets/img/people/default.png' | relative_url }}" alt="{{ person.title }}" class="img-fluid rounded" style="width:100%; aspect-ratio: 1/1; object-fit: contain;">
            </div>
            <div class="profile-info text-center">
              <h5 class="profile-name font-weight-bold">{{ person.title }}</h5>
              <div class="profile-role text-muted small">{{ person.position | default: person.role }}</div>
              {% if person.current_role %}
              <div class="profile-current-role text-muted small mt-1">Now: {{ person.current_role }}</div>
              {% endif %}
              {% if person.email %}
              <div class="profile-email text-muted small">{{ person.email }}</div>
              {% endif %}
            </div>

          {% if person.url %}
          </a>
          {% else %}
          </div>
          {% endif %}
        </div>
        {% endfor %}
      {% endif %}
    </div>
    {% endif %}
  {% endfor %}

</div>

---
layout: default
---

<div class="container people-container people-page">
  {% if page.title %}
  <div class="people-header">
    <h1>{{ page.title }}</h1>
    {% if page.description %}
    <p>{{ page.description }}</p>
    {% endif %}
  </div>
  {% endif %}

  <!-- Simplified Category Loop -->
  {% assign category_order = "professor,postdoc,phd,ms,undergrad,alumni" | split: "," %}
  {% assign category_titles = "Professor,Postdoctoral Researchers,Ph.D. Students,M.S. Students,Undergraduate Students,Alumni" | split: "," %}

  {% for category in category_order %}
    {% assign people_in_category = site.people | where: "category", category %}
    
    {% if people_in_category.size > 0 %}
    <div class="row mb-5 justify-content-center">
      <div class="col-12 mb-3">
        <!-- Get Title by Index -->
        {% assign idx = forloop.index0 %}
        <h3 class="category-title border-bottom pb-2">{{ category_titles[idx] }}</h3>
      </div>
      
      {% if category == 'alumni' %}
        <div class="col-12">
          <ul class="alumni-list" style="list-style: none; padding-left: 0;">
            {% for person in people_in_category %}
            <li style="margin-bottom: 0.5rem; font-size: 1.1rem;">
              <span style="font-weight: bold; color: var(--global-theme-color);">{{ person.title }}</span>, 
              {{ person.role }}{% if person.current_role %}, now {{ person.current_role }}{% endif %}
              {% if person.url %}<a href="{{ person.url | relative_url }}" style="font-size: 0.9em; margin-left: 0.5rem;"><i class="fas fa-link"></i></a>{% endif %}
            </li>
            {% endfor %}
          </ul>
        </div>
      {% else %}
        {% for person in people_in_category %}
        <div class="col-md-4 mb-4">
          {% if person.url %}
          <a href="{{ person.url | relative_url }}" class="profile-card text-decoration-none text-reset">
          {% else %}
          <div class="profile-card">
          {% endif %}
          
            <div class="profile-img-container mb-3">
               <img src="{{ person.image | relative_url }}" alt="{{ person.title }}" class="img-fluid rounded shadow-sm" style="width:100%; aspect-ratio:1/1; object-fit:cover;">
            </div>
            <div class="profile-info text-center">
              <h5 class="profile-name font-weight-bold">{{ person.title }}</h5>
              <div class="profile-role text-muted small">{{ person.position | default: person.role }}</div>
              {% if person.current_role %}
              <div class="profile-current-role text-muted small mt-1">Now: {{ person.current_role }}</div>
              {% endif %}
              {% if person.email %}
              <div class="profile-email text-muted small">{{ person.email }}</div>
              {% endif %}
            </div>

          {% if person.url %}
          </a>
          {% else %}
          </div>
          {% endif %}
        </div>
        {% endfor %}
      {% endif %}
    </div>
    {% endif %}
  {% endfor %}

</div>

---
layout: default
---

<div class="container publications-page">
  <div class="publications">
  
    <!-- Publications Header -->
    <div class="publications-header">
      <h1>{{ site.data.publications.metadata.title | default: "Publications" }}</h1>
      <p>
        {{ site.data.publications.metadata.description | default: "Selected publications and research works." }}
      </p>
    </div>

    <!-- Filter Papers -->
    {% assign all_papers = site.papers | sort: "year" | reverse %}
    {% assign highlighted_papers = "" | split: "" %}
    {% assign normal_papers = "" | split: "" %}

    {% for paper in all_papers %}
      {% if paper.category != "patent" %}
        {% if paper.highlight == true or paper.selected == true %}
          {% assign highlighted_papers = highlighted_papers | push: paper %}
        {% else %}
          {% assign normal_papers = normal_papers | push: paper %}
        {% endif %}
      {% endif %}
    {% endfor %}

    <!-- Group Highlight Section -->
    {% if highlighted_papers.size > 0 %}
    <div class="section-title">
      <h2>{{ site.data.publications.sections.highlight.title | default: "Group Highlight" }}</h2>
    </div>
    <div class="row row-cols-1 row-cols-md-3 g-4 mb-5">
      {% for paper in highlighted_papers %}
        {% include publication_card.html paper=paper %}
      {% endfor %}
    </div>
    {% endif %}

    <!-- Full of Publication Section -->
    <div class="section-title">
      <h2>{{ site.data.publications.sections.full.title | default: "Full of Publication" }}</h2>
    </div>
    <div class="publication-list">
      {% for paper in normal_papers %}
        {% include publication_list_item.html paper=paper %}
      {% endfor %}
    </div>

  </div>
</div>
